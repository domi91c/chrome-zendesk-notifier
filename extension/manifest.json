{
    "name": "Zendesk New Case Checker",
    "description": "Checks for new Zendesk cases in a specific view",
    "version": "1.0.0",
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "https://*.zendesk.com/", "notifications", "storage"
    ],
    "browser_action": {
        "default_icon": {
            "19": "icons/ticket-19.png",
            "38": "icons/ticket-38.png"
        },
        "default_title": "Ticket Checker",
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "128": "icons/ticket-128.png"
    },
    "manifest_version": 2
}